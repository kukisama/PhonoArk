<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PhonoArk.ViewModels"
             xmlns:views="using:PhonoArk.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PhonoArk.Views.MainView"
             x:CompileBindings="False"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid ColumnDefinitions="200,*">
    <!-- Navigation Sidebar -->
    <Border Grid.Column="0" 
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            Padding="10">
      <StackPanel Spacing="5">
        <TextBlock Text="{Binding [AppName], Source={StaticResource Loc}}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="10,10,10,20"
                   HorizontalAlignment="Center"/>

        <Button Content="{Binding [NavIpaChart], Source={StaticResource Loc}}"
                Click="OnIpaChartClick"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"/>

        <Button Content="{Binding [NavExam], Source={StaticResource Loc}}"
                Click="OnExamClick"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"/>

        <Button Content="{Binding [NavFavorites], Source={StaticResource Loc}}"
                Click="OnFavoritesClick"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"/>

        <Button Content="{Binding [NavHistory], Source={StaticResource Loc}}"
                Click="OnHistoryClick"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"/>

        <Button Content="{Binding [NavWordLearning], Source={StaticResource Loc}}"
                IsEnabled="False"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"
          ToolTip.Tip="{Binding [ComingSoon], Source={StaticResource Loc}}"/>

        <Button Content="{Binding [NavSettings], Source={StaticResource Loc}}"
                Click="OnSettingsClick"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Padding="10"
                Classes="NavButton"
                Margin="0,20,0,0"/>
      </StackPanel>
    </Border>

    <!-- Content Area -->
    <ContentControl Grid.Column="1" Content="{Binding CurrentView}">
      <ContentControl.DataTemplates>
        <DataTemplate DataType="vm:IpaChartViewModel">
          <views:IpaChartView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ExamViewModel">
          <views:ExamView/>
        </DataTemplate>
        <DataTemplate DataType="vm:SettingsViewModel">
          <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="vm:FavoritesViewModel">
          <views:FavoritesView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ExamHistoryViewModel">
          <views:ExamHistoryView/>
        </DataTemplate>
      </ContentControl.DataTemplates>
    </ContentControl>
  </Grid>
</UserControl>
