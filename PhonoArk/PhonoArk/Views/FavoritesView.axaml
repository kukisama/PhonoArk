<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PhonoArk.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PhonoArk.Views.FavoritesView"
             x:DataType="vm:FavoritesViewModel">

  <Grid Margin="20" RowDefinitions="Auto,*,Auto">
    <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,20">
      <TextBlock Text="Favorite Phonemes" FontSize="28" FontWeight="Bold"/>
      
      <Grid ColumnDefinitions="Auto,*,Auto">
        <TextBlock Grid.Column="0" 
                   Text="Group:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>
        <ComboBox Grid.Column="1" 
                  ItemsSource="{Binding Groups}"
                  SelectedItem="{Binding SelectedGroup}"
                  HorizontalAlignment="Stretch"/>
        <Button Grid.Column="2"
                Content="Clear All"
                Command="{Binding ClearAllCommand}"
                Margin="10,0,0,0"
                Padding="10,5"/>
      </Grid>
    </StackPanel>

    <ScrollViewer Grid.Row="1">
      <ItemsControl ItemsSource="{Binding Favorites}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,10">
              <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding PhonemeSymbol}"
                           FontSize="32"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                  <TextBlock Text="{Binding GroupName}" FontSize="14" Opacity="0.7"/>
                  <TextBlock Text="{Binding CreatedAt, StringFormat='Added: {0:g}'}" 
                             FontSize="12" 
                             Opacity="0.5"/>
                </StackPanel>
                <Button Grid.Column="2"
                        Content="Remove"
                        Command="{Binding $parent[ItemsControl].((vm:FavoritesViewModel)DataContext).RemoveFavoriteCommand}"
                        CommandParameter="{Binding}"
                        Padding="10,5"/>
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <TextBlock Grid.Row="1"
               Text="No favorites yet. Add phonemes from the IPA Chart!"
               IsVisible="{Binding !Favorites.Count}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="16"
               Opacity="0.6"/>
  </Grid>
</UserControl>
