<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PhonoArk.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PhonoArk.Views.SettingsView"
             x:CompileBindings="False"
             x:DataType="vm:SettingsViewModel">

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20" MaxWidth="600">
      <TextBlock Text="{Binding [SettingsTitle], Source={StaticResource Loc}}" FontSize="28" FontWeight="Bold"/>

      <!-- Accent Selection -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [DefaultAccent], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <ComboBox ItemsSource="{Binding AccentOptions}"
                  SelectedItem="{Binding SelectedAccentOption}"
                  HorizontalAlignment="Stretch">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding DisplayName}"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>

      <!-- Language -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [Language], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <ComboBox ItemsSource="{Binding LanguageOptions}"
                  SelectedItem="{Binding SelectedLanguageOption}"
                  HorizontalAlignment="Stretch">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding DisplayName}"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>

      <!-- Volume -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [Volume], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <Grid ColumnDefinitions="*,Auto">
          <Slider Grid.Column="0" 
                  Value="{Binding Volume}" 
                  Minimum="0" 
                  Maximum="1" 
                  TickFrequency="0.1"/>
          <TextBlock Grid.Column="1" 
                     Text="{Binding Volume, StringFormat='{}{0:P0}'}" 
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"/>
        </Grid>
      </StackPanel>

      <!-- Exam Question Count -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [DefaultExamQuestions], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <NumericUpDown Value="{Binding ExamQuestionCount}"
                      Minimum="5"
                      Maximum="50"
                      Increment="5"/>
      </StackPanel>

      <!-- Dark Mode -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [Appearance], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <CheckBox Content="{Binding [DarkMode], Source={StaticResource Loc}}" IsChecked="{Binding DarkMode}"/>
      </StackPanel>

      <!-- Reminders -->
      <StackPanel Spacing="10">
        <TextBlock Text="{Binding [Learning], Source={StaticResource Loc}}" FontSize="16" FontWeight="SemiBold"/>
        <CheckBox Content="{Binding [EnableStudyReminders], Source={StaticResource Loc}}" IsChecked="{Binding RemindersEnabled}"/>
      </StackPanel>

      <!-- Save Button -->
      <Button Content="{Binding [SaveSettings], Source={StaticResource Loc}}"
              Command="{Binding SaveSettingsCommand}"
              HorizontalAlignment="Stretch"
              Padding="15"
              FontSize="16"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
