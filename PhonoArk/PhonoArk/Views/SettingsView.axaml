<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PhonoArk.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PhonoArk.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20" MaxWidth="600">
      <TextBlock Text="Settings" FontSize="28" FontWeight="Bold"/>

      <!-- Accent Selection -->
      <StackPanel Spacing="10">
        <TextBlock Text="Default Accent:" FontSize="16" FontWeight="SemiBold"/>
        <ComboBox SelectedItem="{Binding SelectedAccent}" HorizontalAlignment="Stretch">
          <ComboBoxItem Content="American (GenAm)">
            <ComboBoxItem.Tag>
              <x:Int32>0</x:Int32>
            </ComboBoxItem.Tag>
          </ComboBoxItem>
          <ComboBoxItem Content="British (RP)">
            <ComboBoxItem.Tag>
              <x:Int32>1</x:Int32>
            </ComboBoxItem.Tag>
          </ComboBoxItem>
        </ComboBox>
      </StackPanel>

      <!-- Volume -->
      <StackPanel Spacing="10">
        <TextBlock Text="Volume:" FontSize="16" FontWeight="SemiBold"/>
        <Grid ColumnDefinitions="*,Auto">
          <Slider Grid.Column="0" 
                  Value="{Binding Volume}" 
                  Minimum="0" 
                  Maximum="1" 
                  TickFrequency="0.1"/>
          <TextBlock Grid.Column="1" 
                     Text="{Binding Volume, StringFormat='{}{0:P0}'}" 
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"/>
        </Grid>
      </StackPanel>

      <!-- Exam Question Count -->
      <StackPanel Spacing="10">
        <TextBlock Text="Default Exam Questions:" FontSize="16" FontWeight="SemiBold"/>
        <NumericUpDown Value="{Binding ExamQuestionCount}"
                      Minimum="5"
                      Maximum="50"
                      Increment="5"/>
      </StackPanel>

      <!-- Dark Mode -->
      <StackPanel Spacing="10">
        <TextBlock Text="Appearance:" FontSize="16" FontWeight="SemiBold"/>
        <CheckBox Content="Dark Mode" IsChecked="{Binding DarkMode}"/>
      </StackPanel>

      <!-- Reminders -->
      <StackPanel Spacing="10">
        <TextBlock Text="Learning:" FontSize="16" FontWeight="SemiBold"/>
        <CheckBox Content="Enable Study Reminders" IsChecked="{Binding RemindersEnabled}"/>
      </StackPanel>

      <!-- Save Button -->
      <Button Content="Save Settings"
              Command="{Binding SaveSettingsCommand}"
              HorizontalAlignment="Stretch"
              Padding="15"
              FontSize="16"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
