/* pages/exam/exam.wxss */

.exam-page {
  min-height: 100vh;
  background: #F5F5F5;
}

/* ==================== 设置界面 ==================== */
.setup-section {
  padding: 0 30rpx 60rpx;
}

.setup-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 50rpx;
}

.setup-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.setup-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.setup-desc {
  font-size: 28rpx;
  color: #999;
}

.setup-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.setup-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.setup-label {
  font-size: 30rpx;
  color: #333;
}

.picker-value {
  font-size: 30rpx;
  color: #4A90D9;
  padding: 8rpx 20rpx;
  background: #F0F4FA;
  border-radius: 8rpx;
}

.setup-action {
  margin-top: 60rpx;
}

.btn-start {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #fff;
  text-align: center;
  padding: 28rpx 0;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 217, 0.35);
}

.btn-start:active {
  opacity: 0.85;
}

/* ==================== 答题界面 ==================== */
.active-section {
  padding-bottom: 60rpx;
}

/* 进度条 */
.progress-bar {
  height: 6rpx;
  background: #E8E8E8;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90D9, #67B8F5);
  transition: width 0.3s ease;
  border-radius: 0 3rpx 3rpx 0;
}

/* 题号 */
.question-header {
  text-align: center;
  padding: 24rpx 30rpx 16rpx;
}

.question-number {
  font-size: 26rpx;
  color: #999;
}

/* 题目卡片 */
.question-card {
  background: #fff;
  margin: 0 30rpx;
  border-radius: 20rpx;
  padding: 50rpx 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.question-word {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.question-ipa {
  font-size: 30rpx;
  color: #4A90D9;
  margin-bottom: 20rpx;
}

.replay-btn {
  padding: 12rpx 30rpx;
  background: #F0F4FA;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #4A90D9;
}

.replay-btn:active {
  background: #DBE7F5;
}

/* 提示 */
.question-hint {
  text-align: center;
  padding: 30rpx 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  justify-content: space-between;
}

.option-btn {
  width: calc(50% - 12rpx);
  background: #fff;
  border: 4rpx solid #E8E8E8;
  border-radius: 16rpx;
  padding: 32rpx 0;
  margin-bottom: 20rpx;
  text-align: center;
  transition: all 0.15s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.option-btn:active {
  transform: scale(0.97);
}

.option-symbol {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.option-selected {
  border-color: #4A90D9;
  background: #EBF3FC;
}

.option-correct {
  border-color: #52C41A;
  background: #F6FFED;
}

.option-correct .option-symbol {
  color: #52C41A;
}

.option-wrong {
  border-color: #FF4D4F;
  background: #FFF2F0;
}

.option-wrong .option-symbol {
  color: #FF4D4F;
}

/* 反馈 */
.feedback {
  padding: 20rpx 30rpx;
}

.feedback-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
}

.feedback-correct {
  background: #F6FFED;
}

.feedback-wrong {
  background: #FFF2F0;
}

.feedback-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.feedback-text {
  font-size: 28rpx;
  color: #333;
}
