/* pages/result/result.wxss */

.result-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 60rpx;
}

/* 成绩展示区 */
.score-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 50rpx;
  background: #fff;
}

.score-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  border: 12rpx solid;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.score-number {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.score-unit {
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

.score-level {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  margin: 30rpx 30rpx 0;
  border-radius: 20rpx;
  padding: 16rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.stat-label {
  font-size: 30rpx;
  color: #666;
}

.stat-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.correct-text {
  color: #52C41A;
}

.wrong-text {
  color: #FF4D4F;
}

.stat-divider {
  height: 2rpx;
  background: #F5F5F5;
}

/* 操作按钮 */
.action-buttons {
  padding: 40rpx 30rpx;
}

.btn-action {
  text-align: center;
  padding: 28rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.btn-action:active {
  opacity: 0.85;
}

.btn-retry {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 217, 0.35);
}

.btn-learn {
  background: #fff;
  color: #4A90D9;
  border: 2rpx solid #4A90D9;
}

.btn-home {
  background: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}
